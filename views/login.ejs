<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <meta name="description" content="<%=  locals.description %>">
    <link rel="stylesheet" href="/assets/vendor/bootstrap/css/bootstrap.min.css">

</head>
<body>

    <style>
        .hidden{
            display: none;
        }
    </style>

    <!-- As a heading -->
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Litlane Book</span>
        </div>
    </nav>

    <div class="container" style="padding-top: 60px;">
        <% message.forEach(element => { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= element %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% }) %>
        <div class="col-lg-12">

            <div class="col-lg-3 mb-4 pb-2 pt-2">
                <h5 class=""></h5>
                
                <ul class="list-group list-group-horizontal">
                    <button type="button" id="menu-login" class="list-group-item list-group-item-action active">Log In</button>
                    <button type="button" id="menu-signup" class="list-group-item list-group-item-action">Sign Up</button>
                </ul>

            </div>
            
            <section id="login-container">
                <div class="fw-light mb-1">Log In</div>
                <form action="/m33R34LZ4V65pH560836fQ/log/postLogin_User" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Please enter your username & password</h4>
                            <hr>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">Username</label>
                                <div class="col-sm-10">
                                    <input type="text" name="username" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">password</label>
                                <div class="col-sm-10">
                                    <input type="text" name="password" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Log In</button>
                                </div>
                            </div>
                            
                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <a href="" class="link-info">Forgot your password ?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>

            <section id="signup-container" class="hidden">
                <div class="fw-light mb-1">Sign Up</div>
                <form action="/postCreate_Account" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Create your Account below</h4>
                            <hr>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">Username</label>
                                <div class="col-sm-10">
                                    <input type="text" name="username" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">password</label>
                                <div class="col-sm-10">
                                    <input type="text" name="password" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" name="email" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Create Account</button>
                                </div>
                            </div>
                            
                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <a href="" class="link-info">Forgot your password ?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <!-- Vendor JS Files -->
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <script>
    //membuat function untuk menghapus classlist hidden dan mengaktifkan hidden serta active

    /*
    Asumsi tiap content signup dan login memiliki container sendiri sebagai id. 
    */
    function showSignUp(){
        // remove dan add kelas hidden secara timbal balik.
        document.getElementById("signup-container").classList.remove("hidden")

        //  add kelas hidden di login-container section karena mengklik menu signup..
        document.getElementById("login-container").classList.add("hidden")



        //add dan remove class active secara timbal balik juga asumsinya.
        document.getElementById("menu-signup").classList.add("active");
        document.getElementById("menu-login").classList.remove("active");
    }

    function showLogin(){

        //kebalikan dari signup function. 

        document.getElementById("login-container").classList.remove("hidden");
        document.getElementById("signup-container").classList.add("hidden");

        document.getElementById("menu-signup").classList.remove("active");
        document.getElementById("menu-login").classList.add("active");

    }

    // $(document)
  </script>


    <script>

    // Event listener untuk menangkap klik pada menu Sign Up.
    document.addEventListener("DOMContentLoaded", function(){

        document.getElementById("menu-signup").addEventListener("click", function (event) {
                event.preventDefault();
                showSignUp();
        });

        document.getElementById("menu-login").addEventListener("click", function (event) {
                event.preventDefault();
                showLogin();
        });
    });

    </script>
</body>
</html>