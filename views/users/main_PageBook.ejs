<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/mainPagebook.css">
</head>
<body>
    <!-- Header -->
    
    <!-- Beta version -->
    <p class="float-end" style="color: gray;">Beta version</p>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <% books.forEach(book => { %>
                <div class="card mx-3 mt-3 col-sm-3" style="width: 16rem;">
                    <img src="<%= book.imageUrl %>" class="card-img-top mt-1 img-thumbnail" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-capitalize"><%= book.title_book %></h5>
                        <hr>
                        <p class="card-text small"><%= book.publisher %></p>
                        <p class="card-text small">
                            <% 
                                const maxParagraphLength = 200;
                                const bookDescription = book.book_description || "";
                                if (bookDescription.length > maxParagraphLength) {
                                    const truncatedDescription = bookDescription.substring(0, maxParagraphLength);
                            %>
                                <%= truncatedDescription %> <a href="/detail_book/<%= book._id %>" class="read-more-link">Read more...</a>
                            <% } else { %>
                                <%= bookDescription %>
                            <% } %>
                        </p>
                        <ul class="list-group list-group-horizontal justify-content-center">
                            <li class="list-group-item">
                                <a class="list-group-item-action size-book-cover-card" href="/detail_book/<%= book._id %>">Detail</a>
                            </li>
                            <li class="list-group-item">
                                <a class="list-group-item-action size-book-cover-card" href="<%= book.book_pdf %>" target="_blank">Read</a>
                            </li>
                        </ul>
                    </div>
                </div>
            <% }); %>
        </div>
        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <nav>
                <ul class="pagination justify-content-center">
                    <% for (let page = 1; page <= totalPages; page++) { %>
                        <li class="page-item <%= currentPage === page ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= page %>"><%= page %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-3 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>Â© 2024 LitLane Book. All rights reserved.</p>
                </div>
                <div class="col-md-6">
                    <!-- Form untuk mengirim email -->
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
